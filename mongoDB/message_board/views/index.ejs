<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message Board</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="style.css">

</head>


<body>

    <div class="d-flex flex-column justify-content-center ml-5">

        <div class="mt-5" id="top">
            <h1>The Dojo Message Board</h1>
        </div>

        <div class="d-flex justify-content-left mt-5">
            <form action="/message" method="POST">

                <div class="form-group">
                    <label for="name">Name:</label>
                    <br>
                    <input type="text" name="name">
                </div>

                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea class="form-control" name="message" id="" cols="200" rows="3"></textarea>
                </div>

                <div class="form-group text-right">
                    <button class="btn-success">Post Message</button>
                </div>

            </form>
        </div>


        <% for(let message of msg) { %>

        <div>
            <h4>Name: <%= message.name %></h4>
            <h4>Message: <%= message.message %></h4>
        </div>


        <% for(let comment of message.comments) { %>

        <div class="ml-5 mt-4">
            <h6>Name: <%= comment.name %></h6>
            <h6>Comment: <%= comment.comment %></h6>
        </div>

        <% } %>

        <div class="d-flex justify-content-center mt-5">

            <form action="/comment/<%= message.id %>" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <br>
                    <input type="text" name="name">
                </div>

                <div class="form-group">
                    <label for="message">Comment:</label>
                    <textarea class="form-control" name="comment" id="" cols="175" rows="3"></textarea>
                </div>

                <div class="form-group text-right">
                    <button class="btn-success">Post Comment</button>
                </div>
            </form>

        </div>

        <% } %>


    </div>

</body>


</html>


